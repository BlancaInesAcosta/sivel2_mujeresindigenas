<% content_for :titulo do %>
    <%= Sivel2Gen.titulo %>
<% end %>


<% content_for :menu do %>
  <%= menu_group do %>
    <% if !current_usuario.nil? %>
      <% if can? :read, Sivel2Gen::Caso then %>
        <%= drop_down "Casos" do %>
          <%= menu_item "Listado", sivel2_gen.casos_path %>
          <%= menu_item "Nuevo", sivel2_gen.new_caso_path %>
          <%= menu_item "Conteo Demografía Víctimas", sivel2_sjr.conteos_personas_path %>
          <%= menu_item "Conteo Servicios Prestados", sivel2_sjr.conteos_respuestas_path %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= menu_group :pull => :right do %>
    <%= menu_item "Documentacion", sivel2_gen.acercade_path %>
    <% if !current_usuario.nil? %>
      <%= drop_down "Administrar" do %>
        <%= menu_item "Clave", sip.editar_registro_usuario_path %>
        <% if session[:capturacaso_acordeon] %>
		<li><a id="fichacasovertical" href="<%= sivel2_gen.fichacasovertical_path %>">Ficha caso vertical ✓</a></li>
        <% else %>
          <li><a id="fichacasovertical" href="<%= sivel2_gen.fichacasovertical_path %>">Ficha caso vertical</a></li>
        <% end %>

        <% if current_usuario.rol == Ability::ROLADMIN || 
          current_usuario.rol == Ability::ROLCOOR ||
          current_usuario.rol == Ability::ROLDIR %>
          <%= menu_item "Usuarios", sivel2_gen.usuarios_path %>
        <% end %>
        <% if current_usuario.rol == Ability::ROLADMIN || 
          current_usuario.rol == Ability::ROLDIR %>
          <%= menu_item "Tablas Básicas", sivel2_gen.tablasbasicas_path %>
        <% end %>
      <% end %>
      <%= menu_item "Salir #{current_usuario.nusuario}", sivel2_gen.sign_out_path %>
    <% else %>
      <%= menu_item "Acerca de", sivel2_gen.acercade_path %>
      <%= menu_item "Iniciar Sesión", sivel2_gen.new_usuario_session_path %> 
    <% end %>
  <% end %>
<% end %> 

<% content_for :piedepagina do %>
    <p><span class='derechos'>Dominio Público de acuerdo a Legislación Colombiana<br/>
      Desarrollado para CODACOP, ONIC, OIK y ACIN por <a href="http://www.pasosdeJesus.org" target="_blank">Pasos de Jesús</a>. 2016. 
    </span></p>
<% end %>

<%= render template: "layouts/sip/application" %>
