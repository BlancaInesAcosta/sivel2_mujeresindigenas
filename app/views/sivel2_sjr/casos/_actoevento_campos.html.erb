<tr class='nested-fields'>
  <td>
    <%= f.association :presponsable, 
      collection: Sivel2Gen::Presponsable.habilitados.order(:nombre),
      include_blank: false,
      label: false,
      label_method: :nombre,
      value_method: :id
    %>
  </td>
  <td>
    <%= f.association :categoria, 
      collection: Sivel2Gen::Categoria.habilitados.order(:nombre),
      include_blank: false,
      label: false,
      label_method: :nombre,
      value_method: :id
    %>
  </td>
  <td>
    <%= f.input :id, as: :hidden %>
    <%= link_to_remove_association "Eliminar", f, 
        :class => 'btn-danger' 
    %>
    <div><%= f.error_notification %></div>
  </td>
</tr>
