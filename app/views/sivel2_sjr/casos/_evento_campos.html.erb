<div class='control-group nested-fields'>
  <div class="controls">
    <%= f.input :id, as: :hidden %>

    <%= f.input :anio, 
      collection: @anios
    %>
    <%= f.input :mes, 
      collection: @meses
    %>
    <%= f.input :dia, collection: @dias %>

    <%= f.input(
            :diasemana, 
            collection: ApplicationHelper::DIASEMANA
      ) 
    %>

    <div class="hora">
	    <%= f.input :hora, wrapper_html: {style: 'display: inline-flex'} %>
    </div>

    <%= f.association :departamento,
      collection: Sip::Departamento.habilitados.where(id_pais: 170),
      include_blank: true,
      label_method: :nombre, 
      value_method: :id
    %>
    
    <%= f.association :municipio,
      collection: ( Sip::Municipio.habilitados.where(
        id_departamento: f.object.departamento_id)),
      include_blank: true,
      label_method: :nombre, 
      value_method: :id
    %>


    <%= f.input :resguardo %>

    <%= f.input :comunidad %>

    <%= f.input :numvecesantes %>
    
    <%= f.input :relacionadocon,
            collection: ApplicationHelper::TIPOCONFLICTO,
            include_blank: false
    %>

    <%= render 'actosevento_din', :f => f %>

    <%= f.input :testigo, 
      collection: ApplicationHelper::NOSI,
      include_blank: false
    %>

  <div class="panel panel-default">
    <div class="panel-heading">Afectaciones</div>
    <div class="panel-body">

      <%= f.association :tafectacion,
        collection: ::Tafectacion.habilitados,
        include_blank: false,
        label_method: :nombre, 
        value_method: :id %> 
      <%= f.association :tapoyo,
        collection: ::Tapoyo.habilitados,
        include_blank: false,
        label_method: :nombre, 
        value_method: :id %>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">Protecci√≥n</div>
    <div class="panel-body">


      <%= f.input :acompnecesita %>

      <%= f.input(
        :situacionriesgo, 
        collection: ApplicationHelper::NOSI,
        include_blank: false) %>

      <%= f.input(
        :solicitomedidas, 
        collection: ApplicationHelper::ANTEQUIENMEDIDAS,
        include_blank: false) %>

      <%= f.input :medidasrecibidas %>

      <%= f.input :brindadaproteccion %>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">Acceso a la Justicia</div>
    <div class="panel-body">

            <%= f.input :denuncia, 
                    collection: ApplicationHelper::NOSI, 
                    include_blank: false 
            %>

    <%= f.input :denunciaante, 
      collection: ApplicationHelper::DENUNCIAANTE,
      include_blank: false 
    %>

  <%= f.input :aniodenuncia, 
    collection: @anios %>
  <%= f.input :mesdenuncia, 
    collection: @meses %>
  <%= f.input :diadenuncia, 
    collection: @dias %>

  <%= f.association :motivonodenuncia,
    collection: ::Motivonodenuncia.habilitados,
    include_blank: false,
    label_method: :nombre, 
    value_method: :id %>

  <%= f.input :valoracionjusticia, 
    collection: ApplicationHelper::VALORACIONBRM,
    include_blank: false 
  %>

<%= f.input :quisieradenunciar, 
  collection: ApplicationHelper::NOSI,
  include_blank: false 
%>
    </div>
  </div>

    <% if f.object.caso.casosjr.oficina_id == 104 && can?(:edit, :casosacin) then %>
       <div class="panel panel-default">
         <div class="panel-heading">Privado ACIN</div>
         <div class="panel-body">
           <%= render 'evento_acin_campos', :f => f %>
         </div>
       </div>
    <% end %>

    <% if f.object.caso.casosjr.oficina_id == 103 && can?(:edit, :casosoik) then %>
       <div class="panel panel-default">
         <div class="panel-heading">Privado OIK</div>
         <div class="panel-body">
           <%= render 'evento_oik_campos', :f => f %>
         </div>
       </div>
    <% end %>
  

    <%= link_to_remove_association "Eliminar Evento", f, 
      {:class => 'btn-danger', :'data-existing' => 'true'} 
    %>
  </div>
</div>
